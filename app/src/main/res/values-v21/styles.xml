<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/blue</item>
        <item name="android:colorPrimaryDark">@color/blued</item>
        <item name="android:colorAccent">@color/orange</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
    <style name="AppThemeLight" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimary">@color/blue</item>
        <item name="android:colorPrimaryDark">@color/blued</item>
        <item name="android:colorAccent">@color/orange</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
    <style name="ActionBarTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:colorPrimaryDark">@color/whited</item>
        <item name="android:colorAccent">@color/orange</item>

    </style>
    <style name="MyStyledActionBar" parent="Base.Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/blue</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#000000</item>
    </style>
</resources>